    gee = (arg: { bar: Int, foo: String }, otherArg: String): Void -> {
        let toPrint = if (arg.bar > 0) arg.foo else otherArg
        print toPrint
    },

    bar = (boo: String): String -> "doo",

    main = (args: String[]): Void -> {
        let third = { foo = "third", bar = 45 }

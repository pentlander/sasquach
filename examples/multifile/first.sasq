Option {
    type T[A] = { value: A },

    some = [A](value: A): T[A] -> { value = value },
    map = [A, B](option: T[A], mapper: { map: (input: A) -> B }): T[B] -> { value = mapper.map(option.value) }
}

First {
    use math/Math,
    use first/Option,
    use std/io/IO,
    use std/std/Integer,
    use std/std/List,
    use foreign java/io/File,
    use foreign java/io/PrintStream,
